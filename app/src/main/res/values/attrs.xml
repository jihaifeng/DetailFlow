<?xml version="1.0" encoding="utf-8"?>
<resources>
  <attr format="color" name="clockBackground"/>
  <attr format="color" name="clockTextColor"/>

  <!-- 自定义验证码输入框-->
  <declare-styleable name="CustomCodeView">
    <!--输入框的数量-->
    <attr format="integer" name="input_edit_number"/>
    <!--输入框的宽度-->
    <attr format="dimension|reference" name="input_edit_width"/>
    <!--输入框之间的分割线-->
    <attr format="reference" name="input_edit_divider"/>
    <!--输入框文字颜色-->
    <attr format="color|reference" name="input_text_color"/>
    <!--输入框文字大小-->
    <attr format="dimension|reference" name="input_text_size"/>
    <!--输入框获取焦点时边框-->
    <attr format="reference" name="input_bg_focus"/>
    <!--输入框没有焦点时边框-->
    <attr format="reference" name="input_bg_normal"/>
  </declare-styleable>

  <!--自定义日历-->
  <declare-styleable name="CustomCalendar">

    <!--不是当月的日期颜色-->
    <attr format="color" name="mTextColorHint"/>
    <!--当月日期颜色-->
    <attr format="color" name="mTextColorNormal"/>
    <!--选中的日期文字颜色-->
    <attr format="color" name="mTextColorSelect"/>
    <!--当天日期未选中颜色-->
    <attr format="color" name="mTextColorToday"/>
    <!--未选中日期的圆点颜色-->
    <attr format="color" name="mPointColorNormal"/>
    <!--选中日期的圆点颜色-->
    <attr format="color" name="mPointColorSelect"/>
    <!--日期文字大小-->
    <attr format="dimension" name="mTextSize"/>
    <!--圆点大小-->
    <attr format="dimension" name="mPointSize"/>
    <!--月历视图高度-->
    <attr format="dimension" name="calendarHeight"/>
    <!--日历背景颜色-->
    <attr format="color" name="backgroundColor"/>

    <!--选中圆的颜色-->
    <attr format="color" name="selectCircleColor"/>
    <!--选中圆的半径-->
    <attr format="dimension" name="selectCircleRadius"/>

  </declare-styleable>

  <!--蜜友推荐-->
  <declare-styleable name="card">
    <attr format="dimension" name="itemMarginTop"/>
    <attr format="dimension" name="bottomMarginTop"/>
    <attr format="dimension" name="yOffsetStep"/>
    <attr format="float" name="widthHeightRate"/>
  </declare-styleable>

  <!-- RichEditText -->
  <declare-styleable name="REditText">
    <!--文字颜色-->
    <attr format="color" name="object_foreground_color"/>
    <!--选中背景色-->
    <attr format="color" name="object_background_color"/>
  </declare-styleable>

  <!-- 带话题标签的输入框TEditText -->
  <declare-styleable name="TEditText">
    <!--话题标签文字颜色 未选中-->
    <attr format="color" name="text_color_normal_topic"/>
    <!--话题标签文字颜色 选中-->
    <attr format="color" name="text_color_select_topic"/>
    <!--话题标签的文字大小-->
    <attr format="dimension" name="text_size_topic"/>
    <!--标签匹配正则-->
    <attr format="string" name="topic_regex"/>
  </declare-styleable>

</resources>